<!-- Coral Reef Network Library -->

<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <parent>
        <groupId>pl.graniec</groupId>
        <artifactId>cr</artifactId>
        <version>1</version>
    </parent>
    
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>pl.graniec</groupId>
    <artifactId>cr-pulpcore-desktop</artifactId>
    <packaging>jar</packaging>
    <version>0.11.4</version>
    
    <name>Coral Reef PulpCore Desktop Implementation</name>
    <url>http://graniec.pl/</url>

    <dependencies>
    
        <!-- JUnit -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
        
        <!-- JMock -->
        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock-junit4</artifactId>
            <version>2.5.1</version>
            <scope>test</scope>
        </dependency>
        
    </dependencies>
    
    <profiles>
        <!-- Debug profile -->
        <profile>
            <id>debug</id>
            <activation>
                <property>
                    <name>!release</name>
                </property>
            </activation>
            
            <dependencies>
            
                <!-- Pulpcore Debug -->
                <dependency>
                    <groupId>pulpcore</groupId>
                    <artifactId>pulpcore-applet-debug</artifactId>
                    <version>0.11.4</version>
                    <scope>compile</scope>
                </dependency>
                
            </dependencies>
        </profile>
        
        <!-- Release profile -->
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>release</name>
                </property>
            </activation>
            
            <dependencies>
            
                <!-- Pulpcore Release -->
                <dependency>
                    <groupId>pulpcore</groupId>
                    <artifactId>pulpcore-applet-release</artifactId>
                    <version>0.11.4</version>
                    <scope>compile</scope>
                </dependency>
                
            </dependencies>
        </profile>
    </profiles>
    
</project>

